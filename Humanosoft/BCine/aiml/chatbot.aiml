<category>
  <pattern>BUENAS TARDES</pattern>
  <template>¡Buenas tardes! ¿En qué puedo ayudarte?</template>
</category>

<!-- Despedidas -->
<category>
  <pattern>ADIOS</pattern>
  <template>¡Hasta luego! Fue un placer conversar contigo.</template>
</category>

<category>
  <pattern>HASTA LUEGO</pattern>
  <template>¡Hasta pronto! Vuelve cuando quieras.</template>
</category>

<!--USO DE WILDCARDS(*)-->
<!-- Capturar nombre -->
<category>
  <pattern>MI NOMBRE ES *</pattern>
  <template>Encantado de conocerte, <star/>. ¿En qué puedo ayudarte hoy?</template>
</category>

<category>
  <pattern>ME LLAMO *</pattern>
  <template>¡Hola <star/>! Es un placer conocerte.</template>
</category>

<!--USO DE SRAI(Reduccion de sinonimos)-->
<!-- Definir respuesta base -->
<category>
  <pattern>COMO ESTAS</pattern>
  <template>¡Muy bien, gracias por preguntar! ¿Y tú?</template>
</category>

<!-- Sinónimos que redirigen -->
<category>
  <pattern>QUE TAL</pattern>
  <template><srai>COMO ESTAS</srai></template>
</category>

<category>
  <pattern>COMO VAS</pattern>
  <template><srai>COMO ESTAS</srai></template>
</category>

<!-- Para despedidas -->
<category>
  <pattern>CHAO</pattern>
  <template><srai>ADIOS</srai></template>
</category>

<category>
  <pattern>NOS VEMOS</pattern>
  <template><srai>ADIOS</srai></template>
</category>
